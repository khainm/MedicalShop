@model sis6s.Models.Category

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewData["Title"]</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Category List</a></li>
        <li class="breadcrumb-item active">Edit Category</li>
    </ol>
    
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-edit me-1"></i>
                    Edit Category Information
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" id="inputCategoryName" placeholder="Category name">
                            <label for="inputCategoryName">Category Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mt-4 d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-info-circle me-1"></i>
                    Category Information
                </div>
                <div class="card-body">
                    <div class="small mb-2">ID: <strong>@Model.Id</strong></div>
                    <div class="small mb-2">Number of Products: <strong>@(Model.Products?.Count ?? 0)</strong></div>
                    
                    <hr class="my-3" />
                    
                    <h6>Note:</h6>
                    <ul class="small">
                        <li>When changing the category name, all related products will be updated automatically</li>
                        <li>Use clear and concise names</li>
                    </ul>
                    
                    <div class="mt-4">
                        <a asp-area="Admin" asp-controller="ProductManagement" asp-action="Index" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-box me-1"></i> View Products in Category
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
