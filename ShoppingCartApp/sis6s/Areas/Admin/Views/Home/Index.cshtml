@model IEnumerable<sis6s.Models.Order>

@{
    ViewData["Title"] = "Dashboard";
}

<h1 class="mt-4">Dashboard</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Overview</li>
</ol>

<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Users</div>
                        <div class="h5 mb-0 font-weight-bold">@ViewBag.TongNguoiDung</div>
                    </div>
                    <div class="fa-3x">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-area="Admin" asp-controller="UserManagement" asp-action="Index">View Details</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Products</div>
                        <div class="h5 mb-0 font-weight-bold">@ViewBag.TongSanPham</div>
                    </div>
                    <div class="fa-3x">
                        <i class="fas fa-box"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-area="Admin" asp-controller="ProductManagement" asp-action="Index">View Details</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Orders</div>
                        <div class="h5 mb-0 font-weight-bold">@ViewBag.TongDonHang</div>
                    </div>
                    <div class="fa-3x">
                        <i class="fas fa-shopping-cart"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-area="Admin" asp-controller="OrderManagement" asp-action="Index">View Details</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card bg-danger text-white mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-xs font-weight-bold text-uppercase mb-1">Revenue</div>
                        <div class="h5 mb-0 font-weight-bold">@ViewBag.TongDoanhThu.ToString("N0") $</div>
                    </div>
                    <div class="fa-3x">
                        <i class="fas fa-money-bill-wave"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Reports" asp-action="Revenue">View Details</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-chart-area me-1"></i>
                Order Status
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-4 mb-3">
                        <div class="card bg-light">
                            <div class="card-body py-3">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">New Orders</div>
                                <div class="h2 mb-0 font-weight-bold text-primary">@ViewBag.DonHangChuaXuLy</div>
                                <div class="mt-2">
                                    <a asp-area="Admin" asp-controller="OrderManagement" asp-action="Unprocessed" class="btn btn-sm btn-primary">Process</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card bg-light">
                            <div class="card-body py-3">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">In Delivery</div>
                                <div class="h2 mb-0 font-weight-bold text-info">@ViewBag.DonHangDangGiao</div>
                                <div class="mt-2">
                                    <a asp-area="Admin" asp-controller="OrderManagement" asp-action="InDelivery" class="btn btn-sm btn-info">View</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card bg-light">
                            <div class="card-body py-3">
                                <div class="text-xs font-weight-bold text-uppercase mb-1">Total</div>
                                <div class="h2 mb-0 font-weight-bold">@ViewBag.TongDonHang</div>
                                <div class="mt-2">
                                    <a asp-area="Admin" asp-controller="OrderManagement" asp-action="Index" class="btn btn-sm btn-secondary">All</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-chart-bar me-1"></i>
                Best Selling Products
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity Sold</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.SanPhamBanChay != null)
                            {
                                foreach (var item in ViewBag.SanPhamBanChay)
                                {
                                    <tr>
                                        <td>@item.SanPham.TenSanPham</td>
                                        <td class="text-center">@item.TongSoLuong</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Recent Orders
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Order Date</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.Id</td>
                            <td>@item.User.FullName</td>
                            <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.TotalAmount.ToString("N0") $</td>
                            <td>
                                @switch (item.Status)
                                {
                                    case sis6s.Models.OrderStatus.Pending:
                                        <span class="badge bg-warning">Awaiting Payment</span>
                                        break;
                                    case sis6s.Models.OrderStatus.Processing:
                                        <span class="badge bg-success">Paid</span>
                                        break;
                                    case sis6s.Models.OrderStatus.Shipped:
                                        <span class="badge bg-info">In Delivery</span>
                                        break;
                                    case sis6s.Models.OrderStatus.Delivered:
                                        <span class="badge bg-primary">Delivered</span>
                                        break;
                                    case sis6s.Models.OrderStatus.Cancelled:
                                        <span class="badge bg-danger">Cancelled</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">Undefined</span>
                                        break;
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-controller="OrderManagement" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Edit" asp-controller="OrderManagement" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 